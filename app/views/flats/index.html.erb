<h1>My Cat Flats</h1>

<% @flats.each do |flat| %>
  <div class="card my-3">
    <div class="row">
      <div class="col-md-3">
        <%= cl_image_tag flat.photos.first.key, crop: :fill, class: 'card-img' %>
      </div>
      <div class="col-md-9">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to flat.title, flat_path(flat) %>
          </h5>
          <p class="card-text">
            <%= flat.description %>
          </p>
          <%= link_to "Edit flat", edit_flat_path(flat), class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
